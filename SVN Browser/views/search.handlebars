{{#each content.index}}
<div class="col-md-6">
    <div class="list-group">
        <span class="list-group-item active">Ordner<span class="badge"><i class="fa fa-folder"></i></span></span>
        {{#if dir.length}}
        {{#each dir}}
        <a href="/search/{{../../$.base}}/{{../../$.path}}/{{$.href}}" class="list-group-item">{{$.name}}<span class="badge"><i class="fa fa-folder-open"></i></span></a>
        {{/each}}
        {{else}}
        <span class="list-group-item">Keine Ordner vorhanden</span>
        {{/if}}
    </div>
</div>
<div class="col-md-6">
    <div class="list-group">
        <span class="list-group-item active">Dateien<span class="badge"><i class="fa fa-file"></i></span></span>
        {{#if file.length}}
        {{#each file}}
        <a href="/view/{{../../$.base}}/{{../../$.path}}/{{$.href}}" class="list-group-item">
            {{$.name}}
            <span class="badge">
                <i class='fa {{#fileicon $.name}}{{/fileicon}}'></i>
            </span>
        </a>
        {{/each}}
        {{else}}
        <span class="list-group-item">Keine Dateien vorhanden</span>
        {{/if}}
    </div>
</div>
{{/each}}
