<form class="form-horizontal" role="form" method="post" action="/login">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Benutzername</label>
        <div class="col-sm-10">
            <input type="text" name="username" class="form-control" id="inputEmail3" placeholder="Benutzername">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="Passwort">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Anmelden</button>
        </div>
    </div>
</form>